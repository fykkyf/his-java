<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace命名空间：对应的接口的全类名-->
<mapper namespace="com.woniu.hospital_information_system.mapper.PatientInfoMapper">
    <insert id="insertPatientInfo">
        insert into patient_info values (null,#{visitorId},#{patientName},#{gender},#{age},#{idNumber},#{unitId},#{doctorId},#{insuranceStatus},now(),
                                         null,#{clinicDiagnosisId},null,null,null,null,0,0)
    </insert>
    <select id="selectPatientInfoByIdNumber"
            resultType="com.woniu.hospital_information_system.entity.PatientInfo">
        select * from patient_info where id_number = #{idNumber}
    </select>
    <update id="updatePatientInfo">
        UPDATE patient_info SET
        <trim prefixOverrides=",">
            <if test="unitId != null">
                ,unit_id = #{unitId}
            </if>
            <if test="doctorId != null">
                ,doctor_id = #{doctorId}
            </if>
            <if test="admissionDiagnosisId != null">
                ,admission_diagnosis_id = #{admissionDiagnosisId}
            </if>
            <if test="dischargeDiagnosisId != null">
                ,discharge_diagnosis_id = #{dischargeDiagnosisId}
            </if>
            <if test="locationId != null">
                ,location_id = #{locationId}
            </if>
            <if test="locationId == null">
                ,location_id = null
            </if>
            <if test="stayStatus != null">
                ,stay_status = #{stayStatus}
            </if>
            <if test="paymentStatus != null">
                ,payment_status = #{paymentStatus}
            </if>
        </trim>
        WHERE patient_id = #{patientId}
    </update>
    <!--根据关键字查询-->
    <select id="selectPatientInfoByKeyWord"
            resultType="com.woniu.hospital_information_system.entity.PatientInfo">
        select * from patient_info
        <where>
            <if test="patientId!=null">
                patient_id = #{patientId}
            </if>
            <if test="patientName != null and patientName != ''">
                and patient_name = #{patientName}
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="idNumber != null and idNumber != ''">
                and id_number = #{idNumber}
            </if>
            <if test="unitId != null">
                and unit_id = #{unitId}
            </if>
            <if test="doctorId != null">
                and doctor_id = #{doctorId}
            </if>
            <if test="insuranceStatus != null">
                and insurance_status = #{insuranceStatus}
            </if>
            <if test="inTime != null">
                and in_time = #{inTime}
            </if>
            <if test="outTime != null">
                and out_time = #{outTime}
            </if>
            <if test="clinicDiagnosisId != null">
                and clinic_diagnosis_id = #{clinicDiagnosisId}
            </if>
            <if test="admissionDiagnosisId != null">
                and admission_diagnosis_id = #{admissionDiagnosisId}
            </if>
            <if test="dischargeDiagnosisId != null">
                and discharge_diagnosis_id = #{dischargeDiagnosisId}
            </if>
            <if test="locationId != null">
                and location_id = #{locationId}
            </if>
            <if test="paidTime != null">
                and paid_time = #{paidTime}
            </if>
            <if test="stayStatus != null">
                and stay_status = #{stayStatus}
            </if>
            <if test="paymentStatus != null">
                and payment_status = #{paymentStatus}
            </if>
        </where>
    </select>
</mapper>